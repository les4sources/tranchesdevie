<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Modifier la capacité</h1>
    <p class="mt-2 text-sm text-gray-600">
      <%= @production_cap.product_variant_display_name %> - <%= @bake_day.display_name %>
    </p>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with model: @production_cap, url: admin_bake_day_production_cap_path(@bake_day, @production_cap), method: :patch, class: "space-y-6" do |f| %>
      <% if @production_cap.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Erreur :</strong>
          <ul class="list-disc list-inside mt-2">
            <% @production_cap.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Current Status -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <h3 class="text-sm font-medium text-blue-800 mb-2">État actuel</h3>
        <dl class="grid grid-cols-3 gap-4 text-sm">
          <div>
            <dt class="text-blue-600">Capacité</dt>
            <dd class="font-semibold text-blue-900"><%= @production_cap.capacity %></dd>
          </div>
          <div>
            <dt class="text-blue-600">Réservé</dt>
            <dd class="font-semibold text-blue-900"><%= @production_cap.reserved %></dd>
          </div>
          <div>
            <dt class="text-blue-600">Disponible</dt>
            <dd class="font-semibold text-blue-900"><%= @production_cap.available %></dd>
          </div>
        </dl>
      </div>

      <div>
        <%= f.label :capacity, "Nouvelle capacité (unités)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :capacity,
              min: @production_cap.reserved,
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        <p class="mt-1 text-sm text-gray-500">
          Minimum : <%= @production_cap.reserved %> (déjà réservé)
        </p>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Annuler", admin_bake_day_production_caps_path(@bake_day), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= f.submit "Enregistrer", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    <% end %>
  </div>
</div>

