<div class="space-y-6">
  <div class="flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Capacités de production</h1>
      <p class="mt-2 text-sm text-gray-600">
        <%= @bake_day.display_name %>
      </p>
    </div>
    
    <div class="flex space-x-2">
      <%= link_to "Nouvelle capacité", new_admin_bake_day_production_cap_path(@bake_day), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      <%= link_to "← Retour", admin_bake_day_path(@bake_day), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
  </div>

  <!-- Copy from Another Date -->
  <% if @bake_day.production_caps.empty? %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-blue-800">
            Astuce : Copiez les capacités d'une autre date
          </h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>Vous pouvez copier les capacités configurées d'une autre date pour gagner du temps.</p>
            <%= form_with url: copy_from_admin_bake_day_production_caps_path(@bake_day), method: :post, class: "mt-3 flex items-center space-x-2" do |f| %>
              <%= f.select :source_bake_day_id, 
                    BakeDay.where.not(id: @bake_day.id).order(baked_on: :desc).map { |bd| [bd.display_name, bd.id] },
                    { prompt: "Sélectionner une date source" },
                    class: "block w-64 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              <%= f.submit "Copier les capacités", class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Bulk Edit Form -->
  <% if @production_caps.any? %>
    <%= form_with url: bulk_update_admin_bake_day_production_caps_path(@bake_day), method: :post, class: "bg-white shadow rounded-lg" do |f| %>
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Capacités configurées (<%= @production_caps.count %>)
        </h3>
        <%= f.submit "Enregistrer toutes les modifications", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
      </div>
      
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Produit
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Capacité
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Réservé
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Disponible
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Utilisation
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @production_caps.each do |cap| %>
              <tr class="<%= 'bg-red-50' if cap.at_capacity? %>">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= cap.product_variant_display_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= f.fields_for "production_caps[#{cap.id}]" do |cap_fields| %>
                    <%= cap_fields.number_field :capacity, 
                          value: cap.capacity,
                          min: cap.reserved,
                          class: "block w-20 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= cap.reserved %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <span class="<%= cap.available > 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= cap.available %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <span class="text-sm text-gray-500 mr-2"><%= cap.percentage_reserved.round %>%</span>
                    <div class="w-32 bg-gray-200 rounded-full h-2">
                      <div class="<%= cap.percentage_reserved >= 80 ? 'bg-red-600' : cap.percentage_reserved >= 50 ? 'bg-yellow-500' : 'bg-green-500' %> h-2 rounded-full" style="width: <%= [cap.percentage_reserved, 100].min %>%"></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "Modifier", edit_admin_bake_day_production_cap_path(@bake_day, cap), class: "text-indigo-600 hover:text-indigo-900 mr-2" %>
                  <% if cap.reserved == 0 %>
                    <%= button_to "Supprimer", 
                          admin_bake_day_production_cap_path(@bake_day, cap),
                          method: :delete,
                          form: { data: { turbo_confirm: "Êtes-vous sûr ?" } },
                          class: "text-red-600 hover:text-red-900" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune capacité configurée</h3>
      <p class="mt-1 text-sm text-gray-500">
        Commencez en ajoutant une capacité pour un produit.
      </p>
      <div class="mt-6">
        <%= link_to "Ajouter une capacité", new_admin_bake_day_production_cap_path(@bake_day), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    </div>
  <% end %>

  <!-- Available Variants to Add -->
  <% if @available_variants.any? %>
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">
        Produits disponibles à ajouter (<%= @available_variants.count %>)
      </h3>
      <div class="grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-3">
        <% @available_variants.each do |variant| %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
            <span class="text-sm text-gray-900"><%= variant.display_name %></span>
            <%= link_to "Ajouter", 
                  new_admin_bake_day_production_cap_path(@bake_day, product_variant_id: variant.id),
                  class: "text-sm text-indigo-600 hover:text-indigo-900" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

